<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_recycler_test"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        card:cardBackgroundColor="@color/cardview_background"
        card:cardElevation="0dp"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/image_view_test"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="1dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/text_view_with_radius" />

        <TextView
            android:id="@+id/text_view_name_card"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="bottom"
            android:singleLine="true"
            android:gravity="center"
            android:text="@string/add_persone" />
    </android.support.v7.widget.CardView>
</android.support.v7.widget.LinearLayoutCompat>